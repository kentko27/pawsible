<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_background"
    tools:context=".ForgotPasswordActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="236dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="@string/forgot_password"
        android:textColor="#000000"
        android:textFontWeight="800"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout3"
        android:layout_width="294dp"
        android:layout_height="79dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="460dp"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startIconDrawable="@drawable/email_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/forgot_email"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="@string/enter_email"
            android:inputType="text|textEmailAddress|textAutoCorrect"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="353dp"
        android:layout_height="52dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="544dp"
        android:text="You will receive instructions for reseting your password. Only a person with access to the email can reset your password."
        android:gravity="center_vertical|center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/sendButton"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="622dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/inter_bold"
        android:text="@string/send"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="720dp"
        android:text="Remember your Password?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="121dp"
        android:layout_height="51dp"
        android:layout_marginStart="234dp"
        android:layout_marginTop="710dp"
        android:clickable="true"
        android:onClick="onLoginHereClicked"
        android:padding="10dp"
        android:text="@string/login_here"
        android:textColor="@color/light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="142dp"
        android:layout_height="140dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="308dp"
        android:src="@drawable/key_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#6C94FC" />

</androidx.constraintlayout.widget.ConstraintLayout>