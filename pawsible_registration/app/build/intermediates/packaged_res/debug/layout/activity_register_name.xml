<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registration_background"
    tools:context=".RegisterNameActivity">



    <TextView
        android:id="@+id/textView9"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="76dp"
        android:fontFamily="@font/inter_extrabold"
        android:text="Welcome to PAWsible!"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView10"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="174dp"
        android:text="Welcome to PAWsible! Please fill up some important information so we can know you more."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="299dp"
        android:fontFamily="@font/inter_bold"
        android:text="What is your name?"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout8"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="340dp"
        app:endIconMode="clear_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_lastname"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Last Name"
            android:inputType="text|textPersonName|textAutoComplete"
            android:textColorHint="@color/gray"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="293dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="400dp"
        app:counterEnabled="false"
        app:endIconMode="clear_text"
        app:helperTextEnabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:placeholderTextColor="@color/gray">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_firstname"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="First Name"
            android:inputType="text|textPersonName|textAutoComplete"
            android:textColorHint="@color/gray"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="293dp"
        android:layout_height="80dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="460dp"
        app:endIconMode="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/register_middlename"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:hint="Middle Name"
            android:inputType="text|textPersonName|textAutoComplete"
            android:textColorHint="@color/gray"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/registerButton"
        android:layout_width="144dp"
        android:layout_height="50dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="647dp"
        android:background="@drawable/button_background"
        android:fontFamily="@font/inter_bold"
        android:text="Next"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="720dp"
        android:text="@string/already_have_an_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="121dp"
        android:layout_height="51dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="710dp"
        android:clickable="true"
        android:onClick="onLoginHereClicked"
        android:padding="10dp"
        android:text="@string/login_here"
        android:textColor="@color/light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>